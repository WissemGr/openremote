# OpenRemote Environment Variables Template
# Copy this to .env and fill in your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_USER=postgres

# Keycloak Configuration  
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_keycloak_admin_password

# OpenRemote Configuration
OR_HOSTNAME=your-domain.com
OR_SSL_PORT=443
SETUP_ADMIN_PASSWORD=your_openremote_admin_password
SETUP_WIPE_CLEAN_INSTALL=true

# For Railway.app deployment
RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app

# For Render.com deployment  
RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# For custom deployments
DATABASE_URL=jdbc:postgresql://postgresql:5432/openremote
IDENTITY_PROVIDER_URL=http://keycloak:8080/auth

